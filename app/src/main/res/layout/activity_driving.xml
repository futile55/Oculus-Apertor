<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.waoss.oculus.apertor.DrivingActivity"
    android:id="@+id/root">

    <org.waoss.oculus.apertor.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_height="495dp"
        android:layout_width="368dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/flipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:onClick="onFlipButtonClicked"
        android:text="Flip" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapButton"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="280dp"
        android:onClick="onShowMapButtonClicked"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/preview"
        android:layout_alignEnd="@+id/preview" />

    <Button
        android:text="Contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/contact_button"
        android:onClick="onContactsButtonClicked" />
</RelativeLayout>
